#include <iostream>
using namespace std;

struct item {
    
    int id;
    float cost;
};
int main (){
   item arr[6] = { {1,6.8},{3,60.2},{5,55.5},{2,40.5} };
   cout<<"Item cost greater than 50.00:\n";
    
   for(int i=0; i<6; i++){
       if(arr[i].cost > 50.00){
           cout<<"Item id : "<<arr[i].id<<endl;
           cout<<"Item cost : "<<arr[i].cost<<endl;
      }
   }
   return 0;
}
